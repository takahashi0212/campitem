<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <h1>新規登録ページ</h1>
  <h1>
  会員情報入力
  </h1>
  <label>ニックネーム</label>
  <span class="indispensable">必須</span>
  <%= f.text_area :nickname %>

   <label>メールアドレス</label>
  <span class="indispensable">必須</span>
  <%= f.email_field :email %>

   <label>パスワード</label>
  <span class="indispensable">必須</span>
  <%= f.password_field :password %>
  
  <label>パスワード(確認)</label>
  <span class="indispensable">必須</span>
  <%= f.password_field :password_confirmation, placeholder:"同じパスワードを入力してください" %>

  <p>本人確認</p>

   <label>お名前(全角)</label>
   <span class="indispensable">必須</span>
   <%= f.text_area :family_name, placeholder:"例) 山田" %>
   <%= f.text_area :first_name, placeholder:"例) 太郎" %>

   <label>お名前カナ(全角)</label>
   <span class="indispensable">必須</span>
   <%= f.text_area :family_name_kana, placeholder:"例)ヤマダ" %>
   <%= f.text_area :first_name_kana, placeholder:"例)タロウ" %>

   <label>生年月日</label>
   <span class="indispensable">必須</span>
      <%= raw sprintf(
                  f.date_select(
                    :birth_day,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>

  <%= f.submit "会員登録" %>
<% end %>