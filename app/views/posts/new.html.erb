<%= form_with model: @post, url: posts_path, local: true do |f| %>
<h1>商品投稿</h1>
 <%# 出品画像 %>
  出品画像
  <span class="indispensable">必須</span>
  <p>クリックしてファイルをアップロード</p>
  <%= f.file_field :hoge %> 
 <%# 出品画像 %>

  商品名
  <span class="indispensable">必須</span>
  <%= f.text_area :name, placeholder:"商品名（必須 40文字まで)" %>
  説明
  <span class="indispensable">必須</span>
  <%= f.text_area :description, placeholder:"商品の説明（必須 1,000文字まで）" %>
  カテゴリー
  <span class="indispensable">必須</span>
  <%= f.collection_select(:category_id, Category.all, :id, :name, {}) %>

  <span>価格</span>
  <span>¥</span>
  <%= f.text_field :price, placeholder:"半角数字で入力" %>

  <%= f.submit "投稿する" %>
  <%=link_to 'もどる', root_path %>
<% end %>